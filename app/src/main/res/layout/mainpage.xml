<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:padding="@dimen/litter_space"
    android:background="@color/mainColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:clickable="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/citySize"
            android:id="@+id/city"
            android:text=""
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:text="易购"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/searchBt"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/search"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
android:id="@+id/scollPullToRefresh"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:layout_weight="1"
>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/dots"
            android:layout_width="match_parent"
            android:layout_height="150dp">
              <android.support.v4.view.ViewPager
                  android:background="@drawable/guide1"
                android:id="@+id/scollImage"
                android:layout_width="match_parent"
                android:layout_height="150dp">

              </android.support.v4.view.ViewPager>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/dot1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/dot_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/dot2"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/dot3"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    <GridView
        android:id="@+id/sort"
        android:numColumns="3"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </GridView>
    <com.dwg.egou.widget.MyGridView
        android:verticalSpacing="@dimen/litter_space"
        android:horizontalSpacing="@dimen/litter_space"
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
       >
   </com.dwg.egou.widget.MyGridView>
</LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>