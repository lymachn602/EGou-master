<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/productImage"
        android:layout_alignParentLeft="true"
        android:src="@drawable/guide1"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/product_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/productImage"
        android:text="商品名称"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="￥100.99"
        android:textColor="@color/red"
        android:layout_alignBottom="@+id/productImage"
        android:layout_toRightOf="@+id/productImage"
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/productImage"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="30dp" >

            <Button
                android:textSize="15pt"
                android:gravity="center"
                android:background="@drawable/subtract"
                android:id="@+id/reduceNumber"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/productNumber"
                android:textSize="@dimen/content_size"
                android:text="10"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <Button
                android:layout_marginRight="@dimen/normal_space"
                android:gravity="center"
                android:textSize="15pt"
                android:background="@drawable/add"
                android:id="@+id/addNumber"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>
</RelativeLayout>